packages:
  yum:
    amazon-efs-utils: []

container_commands:
  01_mount_efs:
    command: |
      mkdir -p /mnt/efs-flashcards
      mount -t efs -o tls,region=ap-southeast-1 fs-08f4ba126f8d806df:/ /mnt/efs-flashcards
  02_ensure_subdirs:
    command: mkdir -p /mnt/efs-flashcards/data/sessions
  03_create_secret_if_missing:
    command: |
      if [ ! -f /mnt/efs-flashcards/data/sessions/secret ]; then
        openssl rand -base64 32 > /mnt/efs-flashcards/data/sessions/secret
      fi
  04_chown_efs:
    command: chown -R webapp:webapp /mnt/efs-flashcards
  05_export_session_secret:
    command: echo "SESSION_SECRET=$(cat /mnt/efs-flashcards/data/sessions/secret | tr -d '\n')" >> /opt/elasticbeanstalk/deployment/env

option_settings:
  aws:elasticbeanstalk:application:environment:
    FLASHCARDS_DATA_DIR: "/mnt/efs-flashcards/data"
